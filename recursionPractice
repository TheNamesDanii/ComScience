# 3

string = "mc6fiddle"
def has_digit(string):
    if len(string) == 0:
        return False
    else:
        if string[0].isdigit() == True:
            return True
        else:
            return has_digit(string[1:])
    
gh = has_digit(string)
print(gh)
    
