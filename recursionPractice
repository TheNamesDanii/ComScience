# 1

numberlist = [4,6,9,2,7,1,10]
def recurs(numberlist):
    if len(numberlist) == 0:
        return 0
    else:
        return numberlist[0] + recurs(numberlist[1:])
    
sum = recurs(numberlist)
print(sum)

