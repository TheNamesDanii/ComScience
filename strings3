poem = "Skiddadle skadoodle."
start = input("Enter a start point (as a number) ")
end = input("Enter an end point (as a number) ")
start = int(start)
end = int(end)
print(poem[start:end])

word = input("Enter a word, any word, in uppercase. ")
if word.isupper() == True:
    print("Thank you.")
else:
    print("Not uppercase, try again.")
    
code = input("Enter your postcode. ")
print(code[:1], code[4:5])

vowels = "a"
name = input("Enter your name. ")
vCount = name.find(vowels)
print("You have",vCount,"vowels in your name.")
